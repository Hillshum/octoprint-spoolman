
<form
    id="settings_spoolman"
    class="form-horizontal"
>
    <h3>
        Spoolman 
        <small>{{ _('Version') }}: 
            <span data-bind="text: pluginSettings.installed_version"></span>
        </small>
    </h3>
    <div class="tabbable">
        <ul
            class="nav nav-tabs"
            id="spoolmanger-settings-tab"
        >
            <li class="active">
                <a
                    href="#tab-spoolman-General"
                    data-toggle="tab"
                >
                    General
                </a>
            </li>
            <li>
                <a
                    href="#tab-spoolman-Debugging"
                    data-toggle="tab"
                >
                    Debugging
                </a>
            </li>
        </ul>

        <div class="tab-content">
            <!-- Tab: General -->
            <div
                id="tab-spoolman-General"
                class="tab-pane active"
            >
                <div class="control-group">
                    <label class="control-label">
                        Spoolman instance URL
                    </label>
                    <div class="controls">
                        <input
                            type="text"
                            class="input-xlarge text-left"
                            data-bind="textInput: pluginSettings.qrCodeURLPrefix, enable: pluginSettings.qrCodeUseURLPrefix"
                            placeholder="http://192.168.1.100:7912"
                        >
                    </div>
                </div>
            </div>

            <!-- Tab: Debugging -->
            <div
                id="tab-spoolman-Debugging"
                class="tab-pane"
            >
                <div class="control-group">
                    <div class="controls">
                        <label class="checkbox">
                            <input
                                type="checkbox"
                                data-bind="checked: pluginSettings.sqlLoggingEnabled"
                            > Logging enabled
                        </label>
                        <span class="help-inline">
                            Hint: You need to restart your server after you changed the checkbox value.
                        </span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
